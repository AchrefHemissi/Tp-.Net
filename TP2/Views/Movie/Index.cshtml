@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movie List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Movie", new { id = movie.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Movie", new { id = movie.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
