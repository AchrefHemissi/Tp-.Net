@model IEnumerable<Customers>


<a href="@Url.Action("Create", "Customers")">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.MembershipType.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Customers", new { id = customer.Customerid })">Edit</a> |
                    <a href="@Url.Action("Details", "Customers", new { id = customer.Customerid })">Details</a> |
                    <a href="@Url.Action("Delete", "Customers", new { id = customer.Customerid })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>